# ============================================================================
# Context Fabric Environment Configuration
# Copy this file to .env and adjust values as needed
# ============================================================================

# ChromaDB Connection
# For local development with docker-compose:
CHROMA_URL=http://localhost:8000
# For embedded ChromaDB (no server):
# CHROMA_URL=

# Storage Directory
# Where context-fabric stores its data (L2 SQLite, config)
CONTEXT_FABRIC_DIR=~/.context-fabric

# ============================================================================
# Layer Configuration
# ============================================================================

# L1 Working Memory Settings
L1_MAX_SIZE=1000
L1_DEFAULT_TTL=3600

# L2 Project Memory Settings
L2_DB_PATH=~/.context-fabric/l2-project.db

# L3 Semantic Memory Settings
L3_STORAGE_PATH=~/.context-fabric/l3-semantic
L3_DECAY_DAYS=30

# ============================================================================
# Embedding Configuration
# ============================================================================

# Embedding model for semantic search
EMBEDDING_MODEL=Xenova/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# ============================================================================
# Context Window Settings
# ============================================================================

MAX_WORKING_MEMORIES=10
MAX_RELEVANT_MEMORIES=10
MAX_PATTERNS=5
MAX_SUGGESTIONS=5
MAX_GHOST_MESSAGES=3

# ============================================================================
# Logging
# ============================================================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# ============================================================================
# Feature Flags
# ============================================================================

# Auto-capture patterns on file open
AUTO_CAPTURE_PATTERNS=true

# Auto-capture decisions
AUTO_CAPTURE_DECISIONS=true

# Scratchpad retention in hours
SCRATCHPAD_RETENTION_HOURS=24
